{% extends 'base.html.twig' %}

{% block body %}
  <p>query: <tt>{{ query }}</tt></p>
  <p>filters: {{ dump(result) }}</p>
  <p>facets: {{ dump(facets) }}</p>
  <p>url: <tt>{{ url }}</tt></p>

  <div class="container" id="content">
    <div class="row">
      <div class="search-block col-12">
        <h3>Search</h3>
        <form id="search">
          <input type="text" name="query" id="query" value="{{ query }}" size="115">
          <i class="fa fa-search" aria-hidden="true"></i>
        </form>
      </div>
    </div>
    <div class="row">
      <div id="left" class="col-3">
        <div id="filters" class="filter-block">
          <h3>Filters</h3>
          <div id="filter-list"></div>
        </div>

        <div id="facets" class="facet-block">
          <h3>Facets</h3>
          <div id="facet-list">
            {% include('search/marc-facets.html.twig') %}
          </div>
        </div>
      </div>
      <div id="main" class="col">
        <div class="row">
          <div class="col-8">
            Found <span id="numFound">{{ numFound }}</span> records
          </div>
          <div class="col-4" id="message"></div>
        </div>

        <div class="row" id="navigation">
          <div class="col-8" id="prev-next"></div>
          <div class="col-4" id="per-page">
            <span class="label">Items per page:</span>
            <span id="items-per-page"></span>
          </div>
        </div>

        <div id="records"></div>

        <div class="row" id="navigation-footer">
          <div class="col-8" id="prev-next-footer"></div>
          <div class="col-4"></div>
        </div>
        <div id="solr-url">{{ url }}</div>
      </div>
    </div>
  </div>

{% endblock %}